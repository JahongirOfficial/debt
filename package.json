{
  "name": "qarzdaftar",
  "private": true,
  "version": "0.1.0",
  "description": "Qarzdaftar - Qarzlarni kuzatish uchun veb ilova",
  "main": "src/main.jsx",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,yellow\" \"npm run dev\" \"npm run dev:backend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:telegram": "cd backend && npm run test:telegram",
    "build": "vite build",
    "build:pwa": "npm run build && npm run pwa:validate",
    "preview": "vite preview",
    "preview:pwa": "npm run build:pwa && vite preview",
    "pwa:validate": "echo 'PWA validation - check manifest.json and service worker'",
    "pwa:icons": "echo 'Generate PWA icons from source image'",
    "migrate:fix-old-debts": "cd backend && npm run migrate:fix-old-debts",
    "install:all": "npm install && cd backend && npm install"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "flag-icons": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.263.1",
    "mongoose": "^8.18.1",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "terser": "^5.44.1",
    "vite": "^4.4.5"
  }
}
